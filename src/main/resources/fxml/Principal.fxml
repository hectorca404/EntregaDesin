<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="600.0" prefWidth="800.0" stylesheets="@../styles/Styles.css" 
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.luisdbb.tarea3AD2024base.controller.PrincipalController">

    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="760.0" spacing="10.0">
            <children>
                <VBox alignment="CENTER_LEFT">
                    <Label text="Principal" />
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER">
                    <Button fx:id="ayudaButton" styleClass="help-button" minHeight="25.0" minWidth="25.0">
                        <graphic>
                            <ImageView fx:id="ayudaIcon" fitHeight="20.0" fitWidth="20.0" />
                        </graphic>
                    </Button>
                </VBox>
            </children>
        </HBox>

        <HBox alignment="CENTER" prefHeight="141.0" prefWidth="760.0">
            <children>
                <ImageView fx:id="logo" fitWidth="150" preserveRatio="true" />
            </children>
        </HBox>

        <HBox alignment="TOP_CENTER" prefHeight="204.0" prefWidth="660.0">
            <children>
                <VBox alignment="CENTER" prefHeight="204.0" prefWidth="260.0" spacing="15.0">
                    <children>
                        <TextField fx:id="userLogField" prefWidth="260.0" promptText="Introduce tu usuario" />

                        <HBox alignment="CENTER" prefWidth="260.0" spacing="5.0">
                            <children>
                                <PasswordField fx:id="passField" prefWidth="230.0" promptText="Introduce tu contraseña" />
                                <Button fx:id="passButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="ojo-button">
                                    <graphic>
                                        <ImageView fx:id="ojoIcon" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true" />
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>

                        <Hyperlink fx:id="forgotPass" text="¿Has olvidado tu contraseña?" />
                        <Button fx:id="logButton" prefWidth="150.0" text="Iniciar Sesión" />
                        <Hyperlink fx:id="regisLink" text="¿No tienes Cuenta? Regístrate." />
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>

